pipeline {
    agent { label 'jdk8' }
    triggers { pollSCM('* * * * *') }
    stages {
        stage('sourcecode') {
            steps {
                git branch: 'sprint1_develop', url: 'https://github.com/sainath335/game-of-life.git'
            }
        }
        stage('build the code') {
            steps {
                 sh 'mvn clean package'
            }            
        }
        stage('Archive and test results') {
           steps {
                sh 'mvn clean package'
                archiveArtifacts artifacts: '**/*.war', followSymlinks: false
           }
        }
    }
}







    